extends ../../core

block title
  title #{lingua.pages.profile.update_information}

block breadcrumbTitle
  | #{lingua.pages.profile.update_information}

block breadcrumbs
  | #{lingua.pages.profile.update_information}

block content
  //- if validationErrors.length
    div.row
      div.col.s12
        div(class="alert-danger card-panel")
          each error, index in validationErrors
            span(class="white-text text-darken-2") #{error.msg}
  div(class="row")
    div(class="col s12")
      div(class="card")
        div(class="card-content")
          span(class="card-title") #{lingua.pages.profile.update_information}
          div(class="row")
            div.col.s12
              form(class="main-form", method="POST")
                div(class="row")

                  div(class="input-field col s12 m6")
                    input(type="text", name="first_name" id="id_first_name", value=(user.firstName))
                    label(for="id_first_name") #{lingua.pages.profile.first_name}

                  div(class="input-field col s12 m6")
                    input(type="text", name="last_name" id="id_last_name", value=(user.lastName))
                    label(for="id_last_name") #{lingua.pages.profile.last_name}

                  div(class="input-field col s12 m6")
                    input(type="text", name="username" id="id_username", value=(user.username))
                    label(for="id_username") #{lingua.pages.profile.username}

                  div(class="input-field col s12 m6")
                    input(type="text", name="job" id="id_job", value=(user.job))
                    label(for="id_job") #{lingua.pages.profile.job}

                  div(class="input-field col s12")
                    button(class="btn waves-effect waves-light" type="submit") #{lingua.general.save}
                      i(class="material-icons right") send